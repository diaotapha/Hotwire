<div class="d-flex justify-content-between m-3">
  <div>
    <p> Tasks</p>
  </div>
  <div>
    <%= link_to "New task", new_task_path  , class:"btn btn-primary"%>
  </div>
</div>

<div class="mx-3" data-controller="sortable" data-sortable-url="/tasks/:id/move">
  <% @tasks.order(position: :asc).each do |task| %>
    <div data-id="<%= task.id %>" class="card card-body mb-3">
      <%= task.description %>
    </div>

  <% end %>
</div>


